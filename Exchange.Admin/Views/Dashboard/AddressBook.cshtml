@model List<Exchange.DTO.AddressBook>
@{
    ViewBag.Title = "Address Book";
}
<div class="row">
    <div class="col-md-12 widget-holder">
        <div class="widget-bg">
            <div class="widget-body clearfix">
                <div class="panel panel-primary">
                    <h5 class="panel-heading">
                        Withdrawl whitelist Address Book
                    </h5>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <a href="@Url.Action("CreateBookAddress","Dashboard")" class="btn btn-success use-loader">Create new whitelist address</a>
                        </div>
                        <div class="divide-10" style="width:100%;height:20px"></div>
                        <br />
                        <table class="table table-hover">
                            <thead class="">
                                <tr style="font-weight:bold">
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Created On
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr><td>Record not found</td></tr>
                                }

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Address</td>
                                        <td>@item.CreatedOn.Value.ToString("MMMM dd, yyyy")</td>
                                        <td>
                                            @if (item.Enabled == true)
                                            {
                                                <span class="label label-success text-success">Enabled</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger text-danger">Disabled</span>

                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


