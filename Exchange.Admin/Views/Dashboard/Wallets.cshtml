@model List<Exchange.DTO.Wallet>
@{
    ViewBag.Title = "Wallets";
}
<div class="row">
    <div class="col-md-12 widget-holder">
        <div class="widget-bg">
            <div class="widget-body clearfix">
                <div class="panel panel-primary">
                    <h5 class="panel-heading">
                        BALANCES
                    </h5>
                    <div class="panel-body">

                        @if (Model.Count == 0)
                        {
                            <p>No wallets available. <a href="#" class="btn btn-primary" style="color:#0094ff">Click here to add deposit wallet</a></p>
                        }
                        else
                        {
                            <table class="table  table-hover panel-primary">

                                <thead>
                                    <tr style="font-weight:bold">
                                        <td>Currency</td>
                                        <td>Address</td>
                                        <td>Balance</td>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ToList())
                                    {
                                        <tr>
                                            <td>@item.Currency</td>
                                            <td>@item.WalletAddress</td>
                                            <td>@item.Balance</td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 widget-holder">
        <div class="widget-bg">
            <div class="widget-body clearfix">
                <div class="panel panel-primary">
                    <h5 class="panel-heading">
                        Withdrawl History
                    </h5>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr style="font-weight:bold">
                                    <td>Currency</td>
                                    <td>Address</td>
                                    <td>Type</td>
                                    <td>Amount Withdrawn</td>
                                    <td>Amount Sent</td>
                                    <td>Network Fee</td>
                                    <td>Exchange Fee</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.withdrawlHistory as List<Exchange.DTO.Payment>)
                                {
                                    <tr>
                                        <td>@item.Currency</td>
                                        <td>@(new string(item.ToWalletAddress.Take(10).ToArray()))............</td>
                                        <td>@item.PaymentType</td>
                                        <td>@item.Amount</td>
                                        <td>@item.AmountSent</td>
                                        <td>@((item.NetworkFee == null) ? 0 : item.NetworkFee.Value)</td>
                                        <td>@((item.Fee == null) ? 0 : item.Fee.Value)</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(function () {
            $("#qt").validate();
        })
    </script>
    }