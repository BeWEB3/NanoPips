@model CoinEXR.Admin.Models.UserAccountModel
@{
    ViewBag.Title = "EditUserAccount";
    Layout = "~/Views/Shared/_masterAdmin.cshtml";
}
<style>
    .mb-minus-5 {
        margin-bottom: -5px;
    }
</style>
<div class="content-block">
    <div class="row no-gutters">
        <div class="col-12 col-md-12 col-lg-12 p-2">
            <div class="card flat border-bottom">
                <div class="card-header">Edit User Account</div>
                @using (Html.BeginForm("EditUserAccount", "Admin", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.AccountId)
                <div class="card-body">
                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">
                            <label>First Name</label>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control cs-form" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">
                            <label>Last Name</label>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control cs-form" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</label>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control cs-form", @readonly = "readonly" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.Email)</label>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">
                            <label>Address</label>
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control cs-form" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.Address)</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">
                            <label>City</label>
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control cs-form" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.City)</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">
                            <label>Country</label>
                            @Html.TextBoxFor(m => m.Country, new { @class = "form-control cs-form"})
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.Country)</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">
                            <label>PlaceOfBirth</label>
                            @Html.TextBoxFor(m => m.PlaceOfBirth, new { @class = "form-control cs-form" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.PlaceOfBirth)</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 mb-minus-5">

                            <input type="submit" value="Update" class="btn btn-success" style="width:15%" />
                            <input type="button" value="Cancel" class="btn btn-warning" style="width:15%" onclick="@("window.location.href='" + @Url.Action("AccountDetail", "Admin", new { acId = Model.AccountId}) + "'");" />

                        </div>
                    </div>
                </div>
                }
            </div>
        </div>

    </div> <!-- end row -->
</div>


@section scripts{

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

