@model CoinEXR.Admin.Models.AdminAccountModel
@{
    ViewBag.Title = "Edit Admin Account";
    Layout = "~/Views/Shared/_masterAdmin.cshtml";
}
<style>
    .mb-minus-5 {
        margin-bottom: -5px;
    }
</style>

<div class="content-block">
    <div class="row no-gutters">
        <div class="col-12 col-md-12 col-lg-12 p-2">
            <div class="card flat border-bottom">
                <div class="card-header">Edit Admin Account</div>
                @using (Html.BeginForm("EditAdminAccount", "Admin", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.AccountId)
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-md-3"></div>
                            <div class="form-group col-md-6">
                                <label for="inputAddress">Account Type</label>
                                @Html.DropDownListFor(m => m.AccountType, new List<SelectListItem>() {
                                            new SelectListItem(){ Text="Super Admin", Value="1" },
                                            new SelectListItem(){ Text="Manager", Value="2" },
                                            new SelectListItem(){ Text="Customer Support", Value="3" }
                                       }, new { @class = "form-control cs-form" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-3"></div>
                            <div class="form-group col-md-6 mb-minus-5">
                                <label>First Name</label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control cs-form" })
                                <label class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</label>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-3"></div>
                            <div class="form-group col-md-6 mb-minus-5">
                                <label>Last Name</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control cs-form" })
                                <label class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</label>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-3"></div>
                            <div class="form-group col-md-6 mb-minus-5">
                                <label>Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control cs-form", @readonly = "readonly" })
                                <label class="text-danger">@Html.ValidationMessageFor(m => m.Email)</label>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-3"></div>
                            <div class="form-group col-md-6 mb-minus-5">
                                <label>Password</label>
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control cs-form", type = "password", @readonly = "readonly" })
                                <label class="text-danger">@Html.ValidationMessageFor(m => m.Password)</label>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-3"></div>
                            <div class="form-group col-md-6 mb-minus-5">

                                <input type="submit" value="Update" class="btn btn-success" style="width:15%" />
                                <input type="button" value="Cancel" class="btn btn-warning" style="width:15%" onclick="@("window.location.href='" + @Url.Action("AdminAccounts", "Admin") + "'");" />

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div> <!-- end row -->
</div>


@section scripts{

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

