
@{
    ViewBag.Title = "Manage Admin Accounts";
    Layout = "~/Views/Shared/_masterAdmin.cshtml";
}

<div class="content-block">
    <div class="row no-gutters">
        <!-- row -->
        <!-- <div class="col-lg-12"><label class="border-left pl-2 text-muted">DataTables</label> </div> -->

        <div class="col-12 col-md-6 col-lg-12 p-2">
            <!-- col -->
            <div class="card flat border-bottom">
                <!-- card -->
                <div class="card-header">@ViewBag.title</div>
                <div class="card-body px-0">
                    @Html.Partial("_MVCGridToolbar", new Exchange.UI.Models.MVCGridToolbarModel()
               {
                   MVCGridName = "AdminAccountsGrid",
                   PageSize = true,
                   ColumnVisibility = true,
                   Export = true,
                   GlobalSearch = true
               })
                    <br />
                    <br />
                    <div class="col-md-12 row " style="max-height:100px;">
                        <div class=" pull-right" style="max-height:100px !important">
                            <a href="@Url.Action("CreateAdminAccount", "Admin")" class="btn btn-info addAccountAnchor" id="search-btn">New Account</a>
                        </div>
                    </div>


                    <div class="dataTables_wrapper container-fluid dt-bootstrap4">
                        @Html.MVCGrid("AdminAccountsGrid")
                    </div>
                </div>
            </div> <!-- end card -->
        </div> <!-- end col -->

    </div> <!-- end row -->
</div>

