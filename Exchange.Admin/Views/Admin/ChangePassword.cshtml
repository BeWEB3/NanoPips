
@model Exchange.Admin.Models.ChangePassword
@{
    ViewBag.title = "Update Password";
    Layout = "~/Views/Shared/_masterAdmin.cshtml";
}

<div class="content-block">
    <div class="row no-gutters">
        <!-- row -->
        @*<div class="col-lg-12"><label class="border-left pl-2 text-muted">Basic Forms</label></div>*@
        <div class="col-12 col-md-12 col-lg-12 p-2">
            <div class="card flat border-bottom">
                <div class="card-header">Change Password</div>
                <div class="card-body">

                    @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new { id = "pass-form" }))
                    {

                        <div class="form-group">
                            <label>Old Password</label>
                            @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control cs-form", type = "password" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.OldPassword)</label>
                        </div>

                        <div class="form-group">
                            <label>New Password</label>
                            @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control cs-form", type = "password" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.NewPassword)</label>
                        </div>

                        <div class="form-group">
                            <label>Confirm New Password</label>
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control cs-form", type = "password" })
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update Now" class="btn btn-success" />
                        </div>


                    }


                </div>
            </div>
        </div>

    </div> <!-- end row -->
</div>



