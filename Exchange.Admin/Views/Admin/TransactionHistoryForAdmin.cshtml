@model List<Exchange.DTO.Order>
@{
    ViewBag.Title = "Transaction History";
    Layout = "~/Views/Shared/_masterAdmin.cshtml";
}

<div class="content-block">
    <div class="row no-gutters">
        <!-- row -->
        <!-- <div class="col-lg-12"><label class="border-left pl-2 text-muted">DataTables</label> </div> -->

        <div class="col-12 col-md-6 col-lg-12 p-2">
            <!-- col -->
            <div class="card flat border-bottom">
                <!-- card -->
                <div class="card-header">Transaction History</div>
                <table id="datatable" class="table table-striped table-bordered w-100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Order Type</th>
                            <th>Date</th>
                            <th>Pair</th>
                            <th>Rate</th>
                            <th>Quantity</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in Model)
                         {
                             <tr>
                                 <td>@item.Account.Email</td>
                                 <td>@item.OrderType</td>
                                 <td>@item.OrderDate</td>
                                 <td>@item.Symbol</td>
                                 <td>@item.Price</td>
                                 @if(item.OrderType == "BUY")
                                 {
                                     <td>@item.Amount</td>
                                 }
                                 else {
                                     <td>@item.Value</td>
                                 }
                                 <td>@item.OrderStatu.Status</td>
                             </tr>
                         }
                    </tbody>
                </table>
            </div> <!-- end card -->
        </div> <!-- end col -->

    </div> <!-- end row -->
</div>
