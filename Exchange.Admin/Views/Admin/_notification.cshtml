@model List<Exchange.DTO.Notification>
@{
    Layout = null;
}


@if (Model.Count == 0)
{
    <a class="nav-link" id="dropdownNotif" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span class="gg-icon material-icons">notifications_none</span> </a>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownNotif">
        <div class="menu-float">
            <div class="mf-header">Notification</div>
            <div class="mf-body" style="height: 30px !important;">
                <div class="list-group mf-list list-group-flush">
                    <a href="#" class="list-group-item wave list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <div class="">no notification..</div>
                        </div>
                    </a>
                </div>
            </div>

        </div>
    </div>


}
else
{
    <a class="nav-link" id="dropdownNotif" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span class="gg-icon material-icons">notifications_none</span> <span class="titik titik-wave bg-warning"></span></a>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownNotif">
        <div class="menu-float">
            <div class="mf-header">Notification</div>
            <div class="mf-body" style="">
                @foreach (var item in Model)
                {
                    <div class="list-group mf-list list-group-flush">
                        <a href="@Url.Action("Notification","Admin",new {notId=item.NotificationId })" heading="@item.NotificationHeading" detail="@item.NotificationDetails" class="list-group-item wave list-group-item-action flex-column align-items-start notify">
                            <div class="d-flex w-100 justify-content-between">
                                <div class="">@item.NotificationHeading (@item.NotificationDetails)</div>
                            </div>
                        </a>
                    </div>
                }

            </div>

        </div>
    </div>
    <!-- /.dropdown-menu -->

}

