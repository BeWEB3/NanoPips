@model Exchange.DTO.UserRole
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>NanoPips Password Reset Request</title>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Rubik:400,700&display=swap" rel="stylesheet">
    <link href="~/Assets/css/custom.css" rel="stylesheet" />
    <link href="~/Assets/css/main.css" rel="stylesheet" />
</head>

<body class="login-bg" style="font-family: 'Rubik', sans-serif;">

    <header>
        <!-- Top navbar -->
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="col-xs-4 col-sm-4">
                    <div class="logo pull-left">
                        <a href="@Url.Action("LandingPage","Account")"><img src="~/android-icon-48x48.png" class="" alt="NanoPips" /></a>
                    </div>
                </div>

                <div class="col-xs-8 col-sm-8">
                    <!-- <ul class="nav navbar-nav pull-right wow fadeInRight">
                      <li class="active"><a href="index.php">Home</a></li>
                      <li><a href="help.php">Help</a></li>
                      <a href="http://webtrader.nanopips.com/">  <button type="button" class="btn btn-mine">Sign In </button> </a>

                      </ul> -->
                </div>

            </div>

        </nav>
    </header>

    <!-- <nav class="navbar navbar-default navbar-static-top login-navbar">
      <div class="logo-header-navbar">
        <img src="assets/img/logo.png" style="width: 168px; height: 48px;">
      </div>
    </nav> -->

    <center>
        <div class="container container-login">
            <div class="row" style="margin-bottom: 36px;">
                <div class="col-md-12">
                    <div class="login-wrapper">
                        <div class="login-container">
                            <div class="row" style="padding: 25px;">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="logo-header logo">
                                        <img src="~/Assets/images/logo.png" class="logoStyle1 widchange">
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12" style="margin-bottom: 48px;">
                                    <div class="login-line col-md-2 col-sm-2 col-xs-2"></div>
                                    <div class="col-md-8 col-sm-8 col-xs-8" style="margin:0 auto;margin-top: -12px;">
                                        <span class="login-header-text" style="margin:0 auto;">Password Change Request</span>
                                    </div>
                                    <div class="login-line col-md-2 col-sm-2 col-xs-2"></div>
                                </div>
                                <div class="logform">
                                    @using (Html.BeginForm("Forgot", "Account", FormMethod.Post, new { id = "f-form", @class = "text-center" }))
                                    {
                                    <div class="success-container">
                                        <div class="col-md-12">
                                            <label for="lg_username" class="sr-only">Email</label>
                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Email", id = "input-1" })
                                            @*<input type="text" class="form-control" id="lg_username" name="lg_username" placeholder="Email">*@
                                        </div>
                                        <p class="text-danger">@Html.ValidationMessageFor(m => m.Username)</p>

                                        <div class="col-md-12" style="margin-bottom: 48px; margin-top: 48px;">
                                            <button class="btn  btn-lg submit-btn loginbtn nanoBtn">Request <i class="fa fa-chevron-right"></i></button><br />
                                            <font color='red' class="error-message"></font>
                                        </div>
                                    </div>
                                    }
                                    </div>
                                <div class="col-md-12">
                                    <a href="@Url.Action("Index","Dashboard")" class="nanoTxt">Register</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="footer">
                        2018 NanoPips.com | All Rights Reserved
                    </span>
                </div>
            </div>
        </div>
    </center>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Assets/vendor/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/DashboardAssets/vendor_components/blockUI/jquery.blockUI.js"></script>

<script>
    $(function () {

        $("#f-form").submit(function (e) {
            e.preventDefault();
            var form = $(this);
            form.validate();
            if (form.valid()) {
                var email = $("#input-1").val();
                $.blockUI();
                $.post("@Url.Action("ForgotPassword","Account")", { email: email }, function (msg) {
                    $.unblockUI();
                    $("#f-form").text(msg);
                })
            }

        })
    })
</script>
</body>
</html>
