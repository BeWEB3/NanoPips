@model List<Exchange.DTO.Notification>
@{
    /**/
    Layout = null;
}
@if (Model.Count == 0)
{
    <a href="#" class="" data-toggle="dropdown">
        <div style="margin-top:15px">
            <i class="fa fa-bell" style="font-size:medium"></i>
        </div>

    </a>
    <ul class="dropdown-menu scale-up">
        <li class="header">You have 0 notifications</li>
    </ul>
    <!-- /.dropdown-menu -->
}
else
{
    <a href="#" class="" data-toggle="dropdown">
        <div style="margin-top:15px">
            <i class="fa fa-bell" style="font-size:medium"><span style="color:#ff0000;font-weight:bold">@Model.Count</span></i>
        </div>
    </a>
    <ul class="dropdown-menu scale-up">
        <li class="header">You have @Model.Count() notifications</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu inner-content-div">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="@Url.Action("Notification","Dashboard",new {notId=item.NotificationId })">
                            @item.NotificationDetails
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
}
